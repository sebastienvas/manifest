<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Git repositories. This is a relative path, based on the '-u' parameter
   -->
  <remote name="github" fetch="../../.."/>

  <default remote="github" revision="master" sync-j="4"  />


  <!-- Istio global build -->
  <project path="build" name="sebastienvas/istio-global-build"/>

  <!-- Istio go components -->
  <project path="go/src/istio.io/pilot" name="istio/pilot"/>
  <project path="go/src/istio.io/mixer"  name="istio/mixer" />
  <project path="go/src/istio.io/auth" name="istio/auth"/>

  <!-- C++ code under src, to avoid poluting the go source path -->
  <project path="src/proxy" name="istio/proxy" />

  <!-- New experimental merged auth+mixer+pilot -->
  <project path="go/src/istio.io/istio" name="mandarjog/istiocombined" />


</manifest>
